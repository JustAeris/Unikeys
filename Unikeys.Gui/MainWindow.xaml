<Window
    x:Class="Unikeys.Gui.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    Title="Unikeys"
    Width="450"
    Height="480"
    MinWidth="450"
    MinHeight="480"
    ui:WindowHelper.UseModernWindowStyle="True"
    mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            Margin="15"
            FontSize="30"
            Style="{StaticResource RobotoMonoFont}">
            Unikeys
        </Label>

        <TabControl Grid.Row="1">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <svgc:SvgViewbox Height="20" Source="Icons/lock-black.svg"/>
                        <Label Style="{StaticResource RobotoMonoFont}">
                            Encrypt
                        </Label>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="1" Grid.Column="1">
                        Choose a file to encrypt
                    </Label>
                    <Button
                        x:Name="ChooseFileEncryptionButton"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Stretch"
                        Click="ChooseFileEncryptionButton_OnClick">
                        <StackPanel Orientation="Horizontal">
                            <svgc:SvgViewbox MaxHeight="15" Source="Icons/file-search-black.svg"/>
                            <Label>
                                Select file
                            </Label>
                        </StackPanel>
                    </Button>
                    <TextBox
                        x:Name="FilePathEncryptionTextBox"
                        Grid.Row="3"
                        Grid.Column="1"
                        IsReadOnly="True"/>

                    <StackPanel
                        Grid.Row="5"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Label VerticalAlignment="Center">
                            Input a password (optional)
                        </Label>
                        <Button
                            x:Name="HelpButton"
                            Background="White"
                            Click="HelpButton_OnClick">
                            <svgc:SvgViewbox
                                MaxHeight="15"
                                Margin="-6,-5"
                                Source="Icons/help-black.svg"/>
                        </Button>
                    </StackPanel>
                    <PasswordBox
                        x:Name="PasswordBox"
                        Grid.Row="6"
                        Grid.Column="1"/>

                    <Button
                        x:Name="EncryptButton"
                        Grid.Row="7"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Click="EncryptButton_OnClick">
                        <StackPanel Orientation="Horizontal">
                            <svgc:SvgViewbox MaxHeight="15" Source="Icons/key-black.svg"/>
                            <Label>
                                Encrypt selected file
                            </Label>
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>


            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <svgc:SvgViewbox Height="20" Source="Icons/lock-open-black.svg"/>
                        <Label Style="{StaticResource RobotoMonoFont}">
                            Decrypt
                        </Label>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="1" Grid.Column="1">
                        Choose a file to decrypt
                    </Label>
                    <Button
                        x:Name="ChooseFileDecryptionButton"
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Stretch"
                        Click="ChooseFileDecryptionButton_OnClick">
                        <StackPanel Orientation="Horizontal">
                            <svgc:SvgViewbox MaxHeight="15" Source="Icons/file-search-black.svg"/>
                            <Label>
                                Select file
                            </Label>
                        </StackPanel>
                    </Button>
                    <TextBox
                        x:Name="FilePathDecryptionTextBox"
                        Grid.Row="3"
                        Grid.Column="1"
                        IsReadOnly="True"/>

                    <StackPanel
                        Grid.Row="5"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Label VerticalAlignment="Center">
                            Input the decryption key/password
                        </Label>
                    </StackPanel>
                    <PasswordBox
                        x:Name="KeyPasswordBox"
                        Grid.Row="6"
                        Grid.Column="1"/>

                    <Button
                        x:Name="DecryptButton"
                        Grid.Row="7"
                        Grid.Column="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center"
                        Click="DecryptButton_OnClick">
                        <StackPanel Orientation="Horizontal">
                            <svgc:SvgViewbox MaxHeight="15" Source="Icons/key-black.svg"/>
                            <Label>
                                Decrypt selected file
                            </Label>
                        </StackPanel>
                    </Button>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <svgc:SvgViewbox Height="20" Source="Icons/settings-black.svg"/>
                        <Label Style="{StaticResource RobotoMonoFont}">
                            Settings
                        </Label>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15"/>
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <Label FontSize="20">Select theme</Label>
                        <RadioButton IsChecked="True">Light</RadioButton>
                        <!--  Those buttons will be enabled when dark mode will be supported  -->
                        <RadioButton IsEnabled="False">Dark</RadioButton>
                        <RadioButton IsEnabled="False">Use system option</RadioButton>
                    </StackPanel>
                </Grid>
            </TabItem>

            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <svgc:SvgViewbox Height="20" Source="Icons/info-black.svg"/>
                        <Label Style="{StaticResource RobotoMonoFont}">
                            About
                        </Label>
                    </StackPanel>
                </TabItem.Header>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="15"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="15"/>
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Orientation="Vertical">
                        <Label FontSize="20">About</Label>
                        <Label x:Name="VersionLabel">Unikeys v</Label>
                        <TextBlock
                            FontSize="14"
                            TextAlignment="Justify"
                            TextWrapping="Wrap">
                            Made with ❤️ by<ui:HyperlinkButton
                                Margin="5,0"
                                VerticalAlignment="Bottom"
                                NavigateUri="https://github.com/JustAeris">
                                Aeris
                            </ui:HyperlinkButton>
                            <LineBreak/><LineBreak/>
                            This software is licensed under the MIT license.
                            And this project is open source and you can collaborate too on GitHub!<LineBreak/>
                            <ui:HyperlinkButton NavigateUri="https://github.com/JustAeris/Unikeys">
                                https://github.com/JustAeris/Unikeys
                            </ui:HyperlinkButton>
                        </TextBlock>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="2">
                        <Image
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Source="Icons/unikeys-logo.png"
                            ToolTip="Logo made by JustWyren"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
