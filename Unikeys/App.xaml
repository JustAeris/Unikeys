<Application
    x:Class="Unikeys.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Unikeys"
    xmlns:ui="http://schemas.modernwpf.com/2019"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources/>
                <ui:XamlControlsResources/>
                <!--  Other merged dictionaries here  -->
            </ResourceDictionary.MergedDictionaries>
            <!--  Other app resources here  -->
            <Style x:Key="RobotoMonoFont" TargetType="Label">
                <Setter Property="FontFamily" Value="Fonts/RobotoMono-Regular.ttf #Roboto Mono"/>
            </Style>
            <Style TargetType="Label">
                <Setter Property="FontFamily" Value="Fonts/Roboto-Regular.ttf #Roboto"/>
            </Style>
            <Style TargetType="TextBlock">
                <Setter Property="FontFamily" Value="Fonts/Roboto-Regular.ttf #Roboto"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
